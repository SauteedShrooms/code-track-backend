<p id="notice"><%= notice %></p>

<h1>Wheels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Speed</th>
      <th>Efficency</th>
      <th>Power</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wheels.each do |wheel| %>
      <tr>
        <td><%= wheel.name %></td>
        <td><%= wheel.speed %></td>
        <td><%= wheel.efficency %></td>
        <td><%= wheel.power %></td>
        <td><%= link_to 'Show', wheel %></td>
        <td><%= link_to 'Edit', edit_wheel_path(wheel) %></td>
        <td><%= link_to 'Destroy', wheel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

